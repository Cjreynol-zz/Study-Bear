<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width = "match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_weight="1"
    android:background="@drawable/gradient">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:id="@+id/convoLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New Message"
                android:id="@+id/button"
                android:onClick="NewMessage"
                style="?android:attr/borderlessButtonStyle"
                android:background="@drawable/sback"
                android:textColor="#FFFFFF"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:layout_marginBottom="10dp"
                />
            ></LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/scrollView"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:fillViewport="false"
        android:background="#00ffffff"
        android:layout_margin="5dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.55"
            android:id="@+id/layout8"
            android:layout_marginBottom="15dp">
            </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="#5AB7D1"
        android:layout_marginTop="10sp">

        <Button
            android:background="#4675A3"
            android:textColor="#FFFFFF"
            android:layout_margin="3sp"
            android:padding="3sp"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Find Match"
            android:id="@+id/button4"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/button6"
            android:layout_toStartOf="@+id/button6" />

        <Button
            android:background="#4675A3"
            android:textColor="#FFFFFF"
            android:layout_margin="3sp"
            android:padding="3sp"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Messaging"
            android:id="@+id/button6"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/button7"
            android:layout_toStartOf="@+id/button7"
            android:onClick="inboxActivity"
            />

        <Button
            android:background="#4675A3"
            android:textColor="#FFFFFF"
            android:layout_margin="3sp"
            android:padding="3sp"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:id="@+id/button7"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/button8"
            android:layout_toStartOf="@+id/button8"
            android:onClick="Logout"/>

        <Button
            android:background="#4675A3"
            android:textColor="#FFFFFF"
            android:layout_margin="3sp"
            android:padding="3sp"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:id="@+id/button8"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:onClick="EditProfile"/>
    </RelativeLayout>

</LinearLayout>
