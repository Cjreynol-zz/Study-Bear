<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.studybear.cdj.myapplication.ProfileActivity"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="149dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.02"
        android:background="#5C85FF">

        <FrameLayout
            android:layout_width="164dp"
            android:layout_height="138dp"
            android:layout_below="@+id/textView"
            android:layout_toRightOf="@+id/textView"
            android:layout_toEndOf="@+id/textView">

            <ImageView
                android:layout_width="184dp"
                android:layout_height="155dp"
                android:id="@+id/imageView"
                android:layout_gravity="center"
                android:src="@drawable/ic_launcher"/>
        </FrameLayout>

        <TextView
            android:layout_width="178dp"
            android:layout_height="134dp"
            android:id="@+id/textView"
            android:background="#EEEEF0"
            android:textColor="#000000"
            android:autoText="false"
            android:text="I&apos;m the best. I don&apos;t need you, but you need me." />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="328dp"
        android:background="#5C85FF">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Chad Reynolds"
            android:id="@+id/textView2"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="38dp"
            android:layout_marginStart="38dp"
            android:textColor="#FFFFFF" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Biography"
            android:id="@+id/textView3"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="49dp"
            android:layout_marginEnd="49dp"
            android:textColor="#FFFFFF" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Classes: Calc 2, Digital Forensics, Senior Capstone, Network Defense &amp; Counter Measures"
            android:id="@+id/textView4"
            android:background="#EEEEF0"
            android:textColor="#000000"
            android:layout_below="@+id/textView2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="40dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="106dp"
            android:layout_above="@+id/button2"
            android:layout_toLeftOf="@+id/button3"
            android:layout_toStartOf="@+id/button3"></LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Messages"
            android:id="@+id/button2"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FindMatches"
            android:id="@+id/button3"
            android:layout_alignTop="@+id/button2"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:onClick="FindMatches"/>

    </RelativeLayout>

</LinearLayout>
